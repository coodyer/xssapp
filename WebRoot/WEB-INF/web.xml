<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<filter>
		<filter-name>XssFilter</filter-name>
		<filter-class>com.xss.web.filter.XssFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>XssFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>VerificationServlet</servlet-name>
		<servlet-class>com.xss.web.servlet.VerificationServlet</servlet-class>
	</servlet>
  <servlet>
    <servlet-name>AdminServlet</servlet-name>
    <servlet-class>com.xss.web.servlet.AdminServlet</servlet-class>
  </servlet>
	<servlet-mapping>
		<servlet-name>VerificationServlet</servlet-name>
		<url-pattern>/VerificationServlet</url-pattern>
	</servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminServlet</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>


	<welcome-file-list>
		<welcome-file>index.esp</welcome-file>
	</welcome-file-list>
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/404.jsp</location>
	</error-page>

	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/jsp/500.jsp</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/WEB-INF/jsp/500.jsp</location>
	</error-page>
	<filter>
		<filter-name>BaseFilter</filter-name>
		<filter-class>com.xss.web.filter.BaseFilter</filter-class>
		<init-param>
			<param-name>excludes</param-name>
			<param-value>/s/**</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>BaseFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>SuffixFilter</filter-name>
		<filter-class>com.xss.web.filter.SuffixFilter</filter-class>
		<init-param>
			<param-name>excludes</param-name>
			<param-value>/s/**</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>SuffixFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>UserFilter</filter-name>
		<filter-class>com.xss.web.filter.UserFilter</filter-class>
		<init-param>
			<param-name>excludes</param-name>
			<param-value>/s/**</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>UserFilter</filter-name>
		<url-pattern>/user/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>AdminFilter</filter-name>
		<filter-class>com.xss.web.filter.AdminFilter</filter-class>
		<init-param>
			<param-name>excludes</param-name>
			<param-value>/s/**</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>AdminFilter</filter-name>
		<url-pattern>/admin/*</url-pattern>
		<url-pattern>/admin/</url-pattern>
		<url-pattern>/admin</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>SpringMVC</filter-name>
		<filter-class>com.xss.web.filter.DiyDispatcherFilter</filter-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:applicationContext.xml</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>SpringMVC</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>